<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- TEXTO: NOMBRE + DOCENTE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreMateriaAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la materia"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDocenteMateriaAlumno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Docente: Nombre Docente"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- ICONO ELIMINAR -->
        <ImageButton
            android:id="@+id/btnEliminarMateriaAlumno"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:contentDescription="Eliminar materia"
            android:scaleType="centerInside"
            android:tint="#D32F2F"
            android:src="@drawable/ic_delete" />
        <!-- crea ic_delete como Vector Asset (trash) -->

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
