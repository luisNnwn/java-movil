<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo docente"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- NOMBRES -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNombresDocente"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombres">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombresDocente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- APELLIDOS -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilApellidosDocente"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Apellidos">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etApellidosDocente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- FACULTAD -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facultad"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spFacultadDocente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- MATERIAS (CHECKBOXES) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materias que imparte"
            android:layout_marginTop="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/layoutMateriasDocente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="4dp">


            </LinearLayout>
        </ScrollView>

        <!-- BOTÃ“N GUARDAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardarDocente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Guardar"
            android:textAllCaps="false"
            app:backgroundTint="#ec8c04"
            android:textColor="@android:color/white" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
