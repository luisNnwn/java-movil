<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormAlumnoMaterias">

    <!-- APP BAR: MIS MATERIAS -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#5cbc6c"
        app:title="Mis materias"
        app:titleCentered="false"
        app:titleTextColor="@android:color/white"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:navigationIconTint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logoToolbar"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_gravity="end|center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logoinstitucionalblanco" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- CONTENIDO -->
    <LinearLayout
        android:id="@+id/layoutContenidoMisMaterias"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- BUSCADOR -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBuscarMisMaterias"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar materia"
            app:startIconDrawable="@drawable/ic_search">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBuscarMisMaterias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- LISTA DE MIS MATERIAS -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMisMaterias"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:overScrollMode="ifContentScrolls"
            tools:listitem="@layout/item_mi_materia" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
