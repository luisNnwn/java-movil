<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlumnoMenuActivity">

    <!-- APPBAR ESTUDIANTE -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#5cbc6c"
        app:title="Estudiante"
        app:titleCentered="false"
        app:titleTextColor="@android:color/white"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logoToolbar"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_gravity="end|center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logoinstitucionalblanco" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- CONTENIDO: CARNET + BOTÃ“N -->
    <LinearLayout
        android:id="@+id/layoutContenidoAlumno"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvIngreseCarnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese su carnet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCarnetAlumno"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Carnet">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCarnetAlumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIngresarAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="ingresarAlumnoMenuActivity2"
            android:text="Ingresar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="#5cbc6c" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
